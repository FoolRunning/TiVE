<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:OpenTK="clr-namespace:OpenTK;assembly=OpenTK.GLControl" xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" x:Class="TiVEBlockEditor2.MainEditorWindow"
        Title="TiVE Resource Editor" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Margin="10" Grid.RowSpan="8">
            <OpenTK:GLControl/>
        </WindowsFormsHost>
        <StatusBar Grid.Row="8" Grid.ColumnSpan="3">
            <Label Content="Label" Width="376"/>
            <ProgressBar Height="14" Width="200" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0"/>
        </StatusBar>
    </Grid>
</Window>
