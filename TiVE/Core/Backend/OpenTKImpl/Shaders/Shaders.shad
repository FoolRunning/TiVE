# Shder definitions for OpenGL

# Shader for unshaded voxels - instanced
[NonShadedInstanced]
vert: ProdigalSoftware.TiVE.Core.Backend.OpenTKImpl.Shaders.Instanced.vert
geom: ProdigalSoftware.TiVE.Core.Backend.OpenTKImpl.Shaders.UnshadedMesh.geom
frag: ProdigalSoftware.TiVE.Core.Backend.OpenTKImpl.Shaders.Simple.frag
attrib: in_Position
attrib: in_Normal
attrib: in_VoxelData
attrib: in_InstancePos
attrib: in_InstanceColor
uniform: matrix_ModelViewProjection
uniform: voxelSize
uniform: cameraLoc
uniform: modelTranslation
uniform: ambientLight
uniform: lightCount
lightUniform: lights


# Shader for shaded voxels - instanced
[ShadedInstanced]
