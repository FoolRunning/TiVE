attrib: in_InstancePos
attrib: in_InstanceColor
uniform: matrix_ModelViewProjection
uniform: voxelSize
uniform: cameraLoc
uniform: modelTranslation
uniform: ambientLight
uniform: lightCount
lightUniform: lights


